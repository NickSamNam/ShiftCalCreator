<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemShift_root"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/itemShift_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Day"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/itemShift_tv_repetition"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/itemShift_tv_timeStart"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/itemShift_tv_repetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/itemShift_tv_timeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintRight_toLeftOf="@+id/itemShift_tv_centre"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemShift_tv_centre"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/itemShift_tv_centre"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/itemShift_tv_timeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/itemShift_tv_centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintRight_toLeftOf="@+id/itemShift_tv_timeEnd"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/itemShift_tv_timeEnd"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemShift_tv_timeEnd"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>